#!/usr/bin/env node
var argv = require('minimist')(process.argv.slice(2)) 
  , _ = require('lodash')
  , cli = require('../lib/cli')
  , App = require('../lib/app')
  , path = require('path')
  , pkg = require('../package.json')

var app = new App({
  src: path.resolve(__dirname, '..')
});

if (argv.version) {
  console.log("Ydm "+pkg.version)
  process.exit(0)
}

if (argv.help) {
  help()
  process.exit(0)
}

if (argv._[0] === 'list-drops') {
  console.log("Listing drops");
  listDrops()
} else if (argv._[0] === "list-containers") {
  var conn = require('../lib/docker_connect').connect()
  conn.docker.listContainers(function (err, res) {
    if ( err ) throw err;
    console.log(res);
  })
} else {
  var intent = cli.parse(argv, app)
  if (intent.DewDrop) {
    cli.run(argv, app)
  } else {
    if (intent.dropName === "help") {
      help()
    } else if (intent.dropName) {
      console.error('No drop \''+intent.dropName+'\'. Available drops:');
      listDrops();
    } else {
      console.error("Missing argument <name>. Available drops:")
      listDrops()
    }
    process.exit(1);
  }
}

function help() {
  var _1 = path.basename(__filename);
  //var _0 = _.map(_1.split(''), function(){return ' '}).join('')
  console.log("Ydm "+pkg.version+" ( "+pkg.repository.url+" ) ")
  console.log("Usage: ")
  console.log("  "+_1+" list-drops")
  console.log("  "+_1+" list-containers")
  console.log("  "+_1+" <drop-name> <action>")
};

function listDrops() {
  _.each(app.drops, function (info, name) {
    console.log(" * "+name);
  });
}
